<div class="hidden-sm col-md-4 col-lg-4">

  <div class="input-group">
    <input id="search" type="text" class="form-control" placeholder="{{placeholder}}">
    <span class="input-group-btn">
      <button class="btn btn-primary" type="button">
        <i class="fa fa-search"></i>
      </button>
    </span>
  </div>

</div>

{{#isDashboardView}}
<div class="btn-group col-xs-6 col-sm-7 col-sm-offset-1 col-md-5 col-md-offset-0 col-lg-4" data-toggle="buttons">
  <label class="btn btn-default col-xs-4 col-md-4">
    <input type="radio" name="options" id="name" autocomplete="off"> {{__ "By Name"}}
  </label>
  <label class="btn btn-default col-xs-4 col-md-4 active">
    <input type="radio" name="options" id="date" autocomplete="off"> {{__ "By Date"}}
  </label>
  <label class="btn btn-default col-xs-4 col-md-4">
    <input type="radio" name="options" id="showcase" autocomplete="off"> {{__ "Showcase"}}
  </label>
</div>

<div class="col-sm-4 col-md-3 col-lg-4">
  {{#if open}}
  <h3 class="create-project">
    <i class="fa fa-plus"></i>
    {{#isLoggedIn}}
    <a href="/dashboards/{{domain}}/create">{{__ "Create Project"}}</a>
    {{else}}
    <a class="login">{{__ "Create Project"}}</a>
    {{/isLoggedIn}}
  </h3>
  {{/if}}
</div>
{{/isDashboardView}}