<div class="cover">
  {{#if title}}
  <i class="item-letter">{{firstLetter title}}</i>
  {{else}}
  <i class="item-letter">{{firstLetter domain}}</i>
  {{/if}}
</div>

<div class="details">
  <div>
    <h2>{{title}}</h2>
    <h3 class="description">
      {{description}}
    </h3>
  </div>
</div>

<div class="action-bar text-center">
  <i class="fa fa-clock-o timer" title="{{timeAgo created_at}}"></i>
  <span>{{dashboards.length}} {{__ "Dashboards"}}</span>
  <!--<span>Likes 00</span>
  <a>Share</a>-->
</div>